<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="v2mini">

<xacro:property name="head_offset_z" value="0.427" />

<xacro:macro name="head">

  <link name="neck_link">
    <visual>
      <origin xyz="0 0 0.42" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://v2mini_description/meshes/head/neck.dae" />
      </geometry>
    </visual>
     <inertial>
       <origin xyz="0 0 0" rpy="0 0 0"/>
       <mass value="1"/>
       <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <link name="head_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://v2mini_description/meshes/head/head.dae" />
       </geometry>
    </visual>
     <inertial>
       <origin xyz="0 0 0" rpy="0 0 0"/>
       <mass value="1"/>
       <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <joint name="neck_tilt" type="revolute">
    <parent link="neck_link"/>
    <child link="head_link"/>
    <axis xyz="1 0 0"/>
    <origin xyz="0 0 ${head_offset_z}" rpy="0 0 3.14"/>
    <limit effort="1000.0" lower="-0.5" upper="0.3" velocity="0.1"/>
  </joint>

  <!-- Attach R200 -->
  

</xacro:macro>

</robot>
